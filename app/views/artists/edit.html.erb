<h1>Edit artist</h1>
<div class="container">
  <div class="row">
    <%= form_for [@billboard, @artist] do |f| %>
      <div class="col m6">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
      <div class="col m6">
        <%= f.label :genre %>
        <%= f.text_field :genre %>
      </div>
      <div class="col m6">
        <%= f.label :rating %>
        <%= f.number_field :rating, min: 0, max: 10 %>
      </div>
      <div class="col m6">
        <%= f.label :bio %>
        <%= f.text_area :bio %>
      </div>
      <%= f.submit class: "btn black white-text" %>
    <% end %>
  </div>
</div>
